<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appdesigner.android.ptcustomermanager.BillingActivity">

    <fragment
        android:layout_height="wrap_content"
        android:layout_width="368dp"
        android:layout_marginStart="8dp"
        tools:layout="@layout/fragment_logged_in"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:name="com.appdesigner.android.ptcustomermanager.LoggedInFragment"
        android:id="@+id/loggedInFragment"/>

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/info"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loggedInFragment"/>

    <TextView
        android:id="@+id/sessionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/sessions"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/infoTextView"
        app:layout_constraintTop_toBottomOf="@+id/loggedInFragment"/>

    <TextView
        android:id="@+id/billingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/billing"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/sessionsTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loggedInFragment"/>

    <EditText
        android:id="@+id/titleEditText"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="@string/billing"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sessionsTextView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:id="@+id/nameTextView"
        android:layout_marginRight="8dp"
        android:text="@string/name_on_card"
        app:layout_constraintRight_toLeftOf="@+id/nameEditText"
        android:textSize="14sp"
        android:labelFor="@+id/nameEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleEditText"
        app:layout_constraintHorizontal_bias="0.509"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nameEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/titleEditText"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:labelFor="@+id/addressEditText"
        android:text="@string/billing_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/addressEditText"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"/>

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/cityTextView"
        app:layout_constraintTop_toBottomOf="@+id/addressTextView"
        android:layout_marginRight="8dp"
        android:text="@string/city"
        app:layout_constraintRight_toLeftOf="@+id/cityEditText"
        android:labelFor="@+id/cityEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/cityEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/addressEditText"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/stateTextView"
        app:layout_constraintTop_toBottomOf="@+id/cityTextView"
        android:layout_marginRight="8dp"
        android:text="@string/state"
        app:layout_constraintRight_toLeftOf="@+id/stateEditText"
        android:labelFor="@+id/stateEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/stateEditText"
        app:layout_constraintTop_toBottomOf="@+id/cityEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/zipTextView"
        app:layout_constraintTop_toBottomOf="@+id/stateTextView"
        android:layout_marginRight="8dp"
        android:text="@string/zip"
        app:layout_constraintRight_toLeftOf="@+id/zipEditText"
        android:labelFor="@+id/zipEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.508"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/zipEditText"
        app:layout_constraintTop_toBottomOf="@+id/stateEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/cardNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/zipTextView"
        android:layout_marginRight="8dp"
        android:text="@string/card_number"
        app:layout_constraintRight_toLeftOf="@+id/cardNumberEditText"
        android:labelFor="@+id/cardNumberEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.508"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/cardNumberEditText"
        app:layout_constraintTop_toBottomOf="@+id/zipEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/expDateTextView"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberTextView"
        android:layout_marginRight="8dp"
        android:text="@string/exp_date"
        app:layout_constraintRight_toLeftOf="@+id/expDateEditText"
        android:labelFor="@+id/expDateEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/expDateEditText"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:inputType="date"
        android:ems="10"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/cvvTextView"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintTop_toBottomOf="@+id/expDateTextView"
        android:layout_marginRight="8dp"
        android:text="@string/cvv"
        app:layout_constraintRight_toLeftOf="@+id/cvvEditText"
        android:labelFor="@+id/cvvEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/cvvEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/expDateEditText"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:onClick="onClick"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:onClick="onClick"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editActionButton"
        app:srcCompat="@android:drawable/ic_menu_save"/>

</android.support.constraint.ConstraintLayout>
